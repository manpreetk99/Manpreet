@model BadgerysCreekHotel.Models.RoomSearch

@{
    ViewData["Title"] = "SearchRooms";
}

<h2>SearchRooms</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchRooms">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BedCount" class="control-label"></label>
                <select asp-for="BedCount" class="form-control" asp-items="Model.Beds"></select>
                <span asp-validation-for="BedCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckIn" class="control-label"></label>
                <input asp-for="CheckIn" class="form-control" />
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckOut" class="control-label"></label>
                <input asp-for="CheckOut" class="form-control" />
                <span asp-validation-for="CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search Rooms" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@if (Model.AvailableRooms != null )
{
    <div>
        <hr />
        @if (Model.AvailableRooms.Count == 0)
        {
            <h4>There are no available rooms.</h4>
        }
        else
        {
            <table class="table">
                <!-- .table is a Bootstrap class giving table styles -->
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AvailableRooms[0].ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Level)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BedCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.AvailableRooms)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.Level
                        </td>
                        <td>
                            @item.BedCount
                        </td>
                        <td>
                            @item.Price
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
}